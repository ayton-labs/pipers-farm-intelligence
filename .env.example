# Piper's Farm AI Control Hub - Environment Variables
# Copy this file to .env and fill in your actual credentials

# ========================================
# SHOPIFY CONFIGURATION
# ========================================
# Get from: Shopify Admin > Apps > Develop apps > API credentials
SHOPIFY_STORE_URL=your-store.myshopify.com
SHOPIFY_ACCESS_TOKEN=shpat_xxxxxxxxxxxxxxxxxxxxx
SHOPIFY_API_VERSION=2024-01

# ========================================
# ORDERWISE CONFIGURATION
# ========================================
# Contact Orderwise support for API credentials
ORDERWISE_API_URL=https://api.orderwise.co.uk
ORDERWISE_API_KEY=your_orderwise_api_key
ORDERWISE_USERNAME=your_username
ORDERWISE_PASSWORD=your_password

# ========================================
# KLAVIYO CONFIGURATION
# ========================================
# Get from: Klaviyo > Settings > API Keys
KLAVIYO_API_KEY=pk_xxxxxxxxxxxxxxxxxxxxx
KLAVIYO_PRIVATE_KEY=xxxxxxxxxxxxxxxxxxxxx

# ========================================
# APTEAN SI CONFIGURATION
# ========================================
# Method: API or CSV
APTEAN_INTEGRATION_METHOD=API
APTEAN_API_URL=https://your-aptean-instance.com/api
APTEAN_API_KEY=your_aptean_api_key
APTEAN_USERNAME=your_username
APTEAN_PASSWORD=your_password

# Alternative: CSV export location
APTEAN_CSV_EXPORT_PATH=/path/to/exports
APTEAN_CSV_SFTP_HOST=sftp.example.com
APTEAN_CSV_SFTP_USER=your_sftp_user
APTEAN_CSV_SFTP_PASSWORD=your_sftp_password

# ========================================
# NOTIFICATION CONFIGURATION
# ========================================
# Slack webhook for notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/T00000000/B00000000/XXXXXXXXXXXXXXXXXXXX
SLACK_CHANNEL_EXECUTIVE=#executive-summary
SLACK_CHANNEL_OPS=#ops-daily
SLACK_CHANNEL_FINANCE=#finance-daily
SLACK_CHANNEL_MARKETING=#marketing-daily

# Email notifications (optional)
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_FROM=reports@pipersfarm.com
EMAIL_TO_EXECUTIVE=harry@pipersfarm.com
EMAIL_PASSWORD=your_email_password

# ========================================
# ALERT THRESHOLDS
# ========================================
# Stock alert threshold (Â£)
STOCK_ALERT_THRESHOLD=500000

# Yield alert threshold (%)
YIELD_ALERT_THRESHOLD=80.0

# Sales variance alert (%)
SALES_VARIANCE_ALERT=10.0

# ========================================
# SYSTEM CONFIGURATION
# ========================================
# Timezone for reports
TZ=Europe/London

# Report output directory
REPORTS_OUTPUT_DIR=./outputs

# Data retention (days)
DATA_RETENTION_DAYS=90

# Debug mode
DEBUG=false
